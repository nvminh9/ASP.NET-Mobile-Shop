            <!-- cuisine -->
            <div class="left-side">
                <h3 class="agileits-sear-head">Hãng</h3>
                <ul>
                    <li>
                        <input type="checkbox" class="checked">
                        <span class="span">Iphone</span>
                    </li>
                    <li>
                        <input type="checkbox" class="checked">
                        <span class="span">Samsung</span>
